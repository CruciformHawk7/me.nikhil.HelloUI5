<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
  <Dialog id="renameCounter" title="{i18n>renDialog} {counterValue>/counterName}" icon="sap-icon://edit"
          showHeader="true">
    <content>
      <Label text="{i18n>newName}" id="newNameLabel" class="sapUiSmallMarginBegin"></Label>
      <Input id="newName" class="sapUiSmallMarginBegin" value="{counterValue>/counterTempName}" width="200px"></Input>
    </content>
    <buttons>
      <Button text="{i18n>confirm}" press="confirmDialog" id="newNameConfirm" class="sapUiSmallMarginBegin"
              type="Emphasized" icon="sap-icon://accept"/>
      <Button text="{i18n>cancel}" press="closeDialog" id="closeDialog" class="sapUiSmallMarginBegin" type="Transparent"
              icon="sap-icon://decline"/>
    </buttons>
  </Dialog>
</core:FragmentDefinition>